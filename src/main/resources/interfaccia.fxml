<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="900.0" stylesheets="@InterfacciaGrafica.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="interfacciaController">

    <left>
        <VBox prefWidth="200.0" styleClass="sidebar-menu" BorderPane.alignment="CENTER">
            <children>
                <ToggleButton fx:id="bLibri" alignment="CENTER_LEFT" maxWidth="Infinity" mnemonicParsing="false" onAction="#switchTab" text="Libri">
                    <toggleGroup>
                        <ToggleGroup fx:id="gruppoMenu" />
                    </toggleGroup>
                </ToggleButton>
                <ToggleButton fx:id="bUtenti" alignment="CENTER_LEFT" maxWidth="Infinity" mnemonicParsing="false" onAction="#switchTab" text="Utenti" toggleGroup="$gruppoMenu" />
                <ToggleButton fx:id="bPrestiti" alignment="CENTER_LEFT" maxWidth="Infinity" mnemonicParsing="false" onAction="#switchTab" text="Prestiti" toggleGroup="$gruppoMenu" />
            </children>
        </VBox>
    </left>

    <center>
        <StackPane BorderPane.alignment="CENTER">
            <children>

                <VBox fx:id="utenti" spacing="10.0" visible="false">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                            <children>
                                <Label fx:id="tUtenti" text="Utenti" />
                                <TextField fx:id="barraRicercaUtenti" promptText="Cerca per Nome, Cognome o Matricola" HBox.hgrow="ALWAYS" />
                                <Button fx:id="btUtente" mnemonicParsing="false" text="Nuovo Utente" />
                            </children>
                        </HBox>
                        <TableView fx:id="tabellaUtente" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="utenteNome" text="Nome" />
                                <TableColumn fx:id="utenteCognome" text="Cognome" />
                                <TableColumn fx:id="utenteEmail" text="Email" />
                                <TableColumn fx:id="utenteID" text="Matricola" />
                                <TableColumn fx:id="utentePrestiti" text="Prestiti" />
                                <TableColumn fx:id="utenteModifica" sortable="false" text="Azioni" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>

                <VBox fx:id="prestiti" spacing="10.0" visible="false">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                            <children>
                                <Label fx:id="tPrestiti" text="Prestiti" />
                                <Region HBox.hgrow="ALWAYS" /> <Button fx:id="btPrestito" mnemonicParsing="false" text="Nuovo Prestito" />
                            </children>
                        </HBox>
                        <TableView fx:id="tabellaPrestiti" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="prestitoUtente" text="Utente" />
                                <TableColumn fx:id="prestitoLibro" text="Libro" />
                                <TableColumn fx:id="prestitoInizio" text="Data Prestito" />
                                <TableColumn fx:id="prestitoFine" text="Scadenza" />
                                <TableColumn fx:id="prestitoModifica" sortable="false" text="Azioni" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>

                <VBox fx:id="libri" spacing="10.0">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                            <children>
                                <Label fx:id="tLibri" text="Libri" />
                                <TextField fx:id="barraRicercaLibri" promptText="Cerca per Titolo, Autore o ISBN" HBox.hgrow="ALWAYS" />
                                <Button fx:id="btLibro" mnemonicParsing="false" text="Nuovo Libro" />
                            </children>
                        </HBox>
                        <TableView fx:id="tabellaLibri" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="libroTitolo" text="Titolo" />
                                <TableColumn fx:id="libroAutore" text="Autore" />
                                <TableColumn fx:id="libroAnno" text="Anno" />
                                <TableColumn fx:id="libroIsbn" text="ISBN" />
                                <TableColumn fx:id="libroCopie" text="Totali" />
                                <TableColumn fx:id="libroCopieD" text="Disponibili" />
                                <TableColumn fx:id="libroDisponibile" text="Stato" />
                                <TableColumn fx:id="libroModifica" sortable="false" text="Azioni" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>

            </children>
        </StackPane>
    </center>

    <top>
        <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="Biblioteca Universitaria" BorderPane.alignment="CENTER">
        </Label>
    </top>

</BorderPane>